#!/bin/bash
# Script to generate CSV report and calculate averages

INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Loop through JSON files
for file in "$INPUT_DIR"/*.json; do
    # Extract name, capitalize first letter
    name=$(jq -r '.name' "$file" | sed 's/\b\(.\)/\u\1/')
    
    # Extract height in meters (decimeters → meters)
    height=$(jq -r '.height' "$file" | awk '{printf "%.1f", $1/10}')
    
    # Extract weight in kg (hectograms → kg)
    weight=$(jq -r '.weight' "$file" | awk '{printf "%.1f", $1/10}')
    
    # Append to CSV
    echo "$name,$height,$weight" >> "$OUTPUT_FILE"
done

echo "CSV Report generated at: $OUTPUT_FILE"

# Calculate averages using awk
avg_height=$(awk -F, 'NR>1 {sum+=$2; count++} END {printf "%.2f", sum/count}' "$OUTPUT_FILE")
avg_weight=$(awk -F, 'NR>1 {sum+=$3; count++} END {printf "%.2f", sum/count}' "$OUTPUT_FILE")

echo "Average Height: $avg_height m"
echo "Average Weight: $avg_weight kg"
